@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container">
        <h1>Create Subject</h1>
        <hr>
        <div class="row">
            <div class="col-md-9 personal-info">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Mark Type:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="ASM">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Value:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Create At:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="date" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Status:</label>
                        <div class="col-lg-8">
                            <div class="ui-select">
                                <select id="status-mark" class="form-control">
                                    <option value="0">Pass</option>
                                    <option value="1">Fail</option>                                   
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <input type="button" class="btn btn-primary" value="Save">
                            <span></span>
                            <input type="reset" class="btn btn-default" value="Reset">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <hr>
</section>
<section class="content container-fluid"></section>
