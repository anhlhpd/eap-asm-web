@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container">
        <h1>Create Student</h1>
        <hr>
        <div class="row">
            <div class="col-md-9 personal-info">
                <h3>Student Information</h3>
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">First name:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" name="firstName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Last name:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" name="lastName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Phone:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" name="phone">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Brithday:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="date" name="birthday">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Gender:</label>
                        <div class="col-lg-8">
                            <div class="ui-select">
                                <select id="gender-student" class="form-control" name="gender">
                                    <option value="0">Female</option>
                                    <option value="1">Male</option>
                                    <option value="2">Other</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <input type="button" class="btn btn-primary" value="Save" id="btnSave">
                            <span></span>
                            <input type="reset" class="btn btn-default" value="Reset">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <hr>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!--------------------------
    | Your Page Content Here |
    -------------------------->
</section>
<section class="content container-fluid"></section>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
<script>
    $("#btnSave").click(function () {
        var token = localStorage.getItem('token-key');
        var data = {
            "firstName": $('input[name="firstName"]').val(),
            "lastName": $('input[name="lastName"]').val(),
            "birthday": $('input[name="birthday"]').val(),
            "gender": $('select[name="gender"]').val(),
            "phone": $('input[name="phone"]').val()
        }
        $.ajax({
            method: 'POST',
            url: 'https://eap-asm.azurewebsites.net/api/GeneralInformations/STU',
            headers: {
                'content-type': 'application/json',
                'Authorization': 'Basic ' + token
            },
            data: JSON.stringify(data),
            success: function (data, textStatus, jqXHR) {
                alert("You have added a new student:\nUsername: " + data.username + "\nPassword: " + data.password);
                window.location.href = "/Manager/ListStudent"
            },
            error: function (jqXHR, exception) {
                console.log('An error happened. Please try again later.');
                console.log(jqXHR);
            }
        });
    });
</script>
